\NeedsTeXFormat{LaTeX2e}
% frame2.sty - A LaTeX beamer environment that wraps content with a specified font size

\RequirePackage{environ}

% Define the frame2 environment with a font size argument
\NewEnviron{frame2}[2][]{%
  \begin{frame}{#2}%
    % Apply the specified font size command if provided
    \csname #1\endcsname%
    \BODY%
  \end{frame}%
}

\endinput